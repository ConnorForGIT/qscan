{
    "env": {
        "node": true,
        "commonjs": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "no-console": [
            "off"
        ],
        "spaced-comment": [
            2
        ],
        "no-trailing-spaces": [
            2
        ],
        "no-spaced-func": 2,
        "comma-spacing": 0,
        "space-before-blocks": [
            0,
            "always"
        ],
        "experimentalObjectRestSpread": true
    }
}